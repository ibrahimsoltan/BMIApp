<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>
  <div class="BMI content">
    <h2>BMI Results</h2>

    <% if (usersBMI.length > 0 ) { %>
      <% usersBMI.forEach(BMI => { %>
        <% if(BMI.userid == loggedIn) { %>
        <a class = "single" href = "/bmiRes/<%= BMI._id %>" > 
        <h3 class="date">date: <%= BMI.date %></h3>
        <p class="userName">Name : <%= BMI.userName %></p>
        <p class="bmi">BMI : <%= BMI.bmi %></p>
        <p class="status">Status : <%= BMI.bmiStatus %></p>
        </a>
        <% } %>
      <% }) %>
    <% } else { %>
      <p>There are no BMIs to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>