<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>
  <div class="blogs content">
    <h2>BMI Results</h2>

    <% if (users.length > 0) { %>
      <% users.forEach(user => { %>
        <h3 class="date">date: <%= user.date %></h3>
        <p class="userName">Name : <%= user.userName %></p>
        <p class="bmi">BMI : <%= user.bmi %></p>
        <p class="status">Status : <%= user.bmiStatus %></p>

      <% }) %>
    <% } else { %>
      <p>There are no BMIs to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>